<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.ramsesmartinez.shakeapp.ShakeActivity">

    <include
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_view_score"
                android:background="@drawable/text_view_circle"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="@dimen/width_content_score"
                android:layout_width="@dimen/height_content_score"
                android:layout_gravity="center"
                android:text="@string/score"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/font_size_score"/>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/myFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/margin_floating_button"
            android:src="@drawable/ic_play"
            app:elevation="@dimen/elevation_floating_button"
            app:fabSize="normal"
            app:borderWidth="0dp" />
    </FrameLayout>
</LinearLayout>
